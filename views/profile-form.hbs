<section class="uk-section">
  <div class="uk-container">
    <div class="uk-flex uk-flex-center">
      <div class="uk-flex uk-flex-center uk-flex-column uk-width-1-4">

        <div class="uk-flex uk-flex-center uk-width-auto">
          <div class="">
            <img src="https://ph-files.imgix.net/43678140-24eb-418f-89ce-12459dd395f7?auto=format" alt="" width="170"
              height="170">
          </div>
        </div>


        <!--se revisa que en la consola de navergador apunte la ruta correctamente-->
        <form {{#if action}} action="/auth/login" {{else}} action="/auth/register" {{/if}} class="uk-text-center"
          method="POST">


          <h2 class=" uk-flex uk-flex-center">
            {{#if action}}
            {{action}}
            {{else}}
            Register
            {{/if}}
          </h2>



          <div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon" uk-icon="icon: user"></span>
              <input name="name" class="uk-input" type="text" placeholder="Enter your name">
            </div>
          </div>


          <div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon" uk-icon="icon: mail"></span>
              <input name="lastname" class="uk-input" type="text" placeholder="Your Lastname">
            </div>
          </div>

          <!---<div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon" uk-icon="icon: image"></span>
              <input name="image" class="uk-input" type="file">
            </div>
          </div>--->

          <div class="uk-margin">
            <div class="js-upload" uk-form-custom>
              <input type="file" multiple>
              <button class="uk-button uk-button-default uk-text-lowercase"  type="button" tabindex="-1"  uk-icon="icon: image">update profile picture</button>
            </div>
          </div>

          {{#if err.message}}
          <div class="uk-alert-danger uk-width-1-3 uk-margin-auto" uk-alert>
            <p>{{err.message}}</p>
          </div>
          {{/if}}

          <button class="uk-button uk-button-secondary">
            {{#if action}}
            {{action}}
            {{else}}
            Update Profile
            {{/if}}
          </button>

        </form>


      </div>
    </div>

  </div>
</section>