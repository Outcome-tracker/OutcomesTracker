<section class="uk-section uk-section-default">
  <div class="uk-container">
    <div class="uk-flex uk-flex-center">
      <div class="uk-flex uk-flex-center uk-flex-column uk-width-1-4">

        <div class="uk-flex uk-flex-center ">
          <div class="">
            <img src="https://cdn-images-1.medium.com/max/1200/1*69RcxrWXuk385lSxkIYYLA.png" alt="" width="250"
              height="250">
          </div>
        </div>


        <!--se revisa que en la consola de navergador apunte la ruta correctamente-->
        <form {{#if action}} action="/auth/login" {{else}} action="/auth/register" {{/if}} class="uk-text-center"
          method="POST">


          <h2 class=" uk-flex uk-flex-center">
            {{#if action}}

            {{else}}
            {{/if}}
          </h2>


          {{#unless action}}
          <div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon" uk-icon="icon: user"></span>
              <input name="name" class="uk-input" type="text" placeholder="Enter your name">
            </div>
          </div>
          {{/unless}}

          <div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon" uk-icon="icon: mail"></span>
              <input name="email" class="uk-input" type="email" placeholder="example@example.com">
            </div>
          </div>

          <div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon" uk-icon="icon: lock"></span>
              <input name="password" class="uk-input" type="password" placeholder="Enter your password">
            </div>
          </div>

          {{#if err.message}}
          <div class="uk-alert-danger uk-width-1-3 uk-margin-auto" uk-alert>
            <p>{{err.message}}</p>
          </div>
          {{/if}}

          <button class="uk-button uk-button-secondary">
            {{#if action}}
            {{action}}
            {{else}}
            Register
            {{/if}}
          </button>

        </form>


      </div>
    </div>

  </div>
</section>