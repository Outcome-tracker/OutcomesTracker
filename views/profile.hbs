<section class="uk-section">
    <div class="uk-container">
        <div class="uk-grid-match uk-child-width-1-2" uk-grid>
            <div class="uk-width-1-3">
                <div>
                    {{#if user.image}}
                    <img src="{{user.image}}" alt="{{user.name}}">
                    {{else}}
                    <img class="uk-border-circle" data-src="http://www.hugoandmarie.com/wp-content/uploads/2018/04/hugomarie_julesjulien_theatlanticrethink_netflixcollateral_01-800x800.png"
                        width="300" height="300" alt="" uk-img>
                    {{/if}}

                    <div class="uk-margin-medium-top">
                        <p class="uk-text-lead">{{user.name}} {{user.lastname}}</p>
                    </div>

                    <div class="uk-margin-medium-top">
                        <p class="uk-text-lead">{{user.email}}</p>
                    </div>

                    <div>
                        <a class="uk-button uk-button-primary uk-text-success" href="/profile/{{user._id}}/edit">Perfil edit</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>






