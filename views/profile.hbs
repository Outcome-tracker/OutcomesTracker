<section class="uk-section">

    <div class="uk-flex uk-flex-center">
        <div class="uk-container uk-margin-small-top">
            <div class="uk-grid-match uk-child-width-1-2" uk-grid>
                <div class="uk-width-1-3">
                    <div>
                        {{#if user.img}}
                        <img src="{{user.img}}" alt="{{user.name}}">
                        {{else}}

                        <img class="uk-border-circle" data-src="" width="300" height="300" alt="" uk-img>

                        {{/if}}

                        <div class="uk-margin-medium-top">
                            <p class="uk-text-lead">{{user.name}} {{user.lastname}}</p>
                        </div>

                        <div class="uk-margin-small-top">
                            <p class="uk-text-lead">{{user.email}}</p>
                        </div>

                        <div "uk-margin-medium-top">

                            <div>
                                <a class="uk-button uk-button-primary uk-text-success"
                                    href="/profile/{{user._id}}/edit">Edit profile</a>
                            </div>

                            <div>
                                <div>
                                    <div>
                                        <a class="uk-button uk-button-secondary uk-text-success" href="/student">Student
                                            board</a>

                                        <div>
                                            <a class="uk-button uk-button-secondary uk-text-success"
                                                href="/sboard">Sboard-form</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

</section>
